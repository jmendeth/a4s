{
  "name": "a4s",
  "version": "2.0.0",
  "description": "Framework for AWS v4 signing tasks",
  "author": "Alba Mendez <me@alba.sh>",
  "keywords": [
    "aws",
    "amazon",
    "sign",
    "signing",
    "aws4",
    "signature",
    "typescript"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mildsunrise/a4s.git"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "docs": "typedoc --out docs",
    "report-coverage": "cat ./coverage/lcov.info | coveralls"
  },
  "files": [
    "dist"
  ],
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/",
      "index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{js,ts}"
    ]
  },
  "dependencies": {
    "@types/node": "^12.0.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.14",
    "coveralls": "^3.0.2",
    "jest": "^24.9.0",
    "ts-jest": "^24.3.0",
    "ts-node": "^8.3.0",
    "typedoc": "^0.15.8",
    "typescript": "^3.8.3"
  }
}
